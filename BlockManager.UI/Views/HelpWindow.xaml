<Window x:Class="BlockManager.UI.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="大样图插件使用说明" 
        Height="500" Width="700"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- 颜色资源 -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#F3F4F6"/>
    </Window.Resources>

    <!-- 主窗口容器 -->
    <Border Background="{StaticResource SurfaceBrush}" 
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              Opacity="0.15" 
                              BlurRadius="24" 
                              ShadowDepth="8" 
                              Direction="270"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>   <!-- 标题栏 -->
                <RowDefinition Height="*"/>    <!-- 内容区域 -->
                <RowDefinition Height="60"/>   <!-- 按钮区域 -->
            </Grid.RowDefinitions>
        
            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 标题和图标 -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="24,0">
                        <!-- 帮助图标 -->
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="8"
                                Width="32" Height="32"
                                Margin="0,0,12,0">
                            <Grid>
                                <!-- 问号图标 -->
                                <TextBlock Text="?"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="大样图插件使用说明"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="BlockManager 结构设计插件"
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 关闭按钮 -->
                    <Button Grid.Column="1" 
                            Width="40" Height="40" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Margin="0,0,12,0"
                            Click="CloseButton_Click">
                        <Grid Width="12" Height="12">
                            <Rectangle Width="12" Height="1" 
                                       Fill="{StaticResource TextSecondaryBrush}"
                                       RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Width="12" Height="1" 
                                       Fill="{StaticResource TextSecondaryBrush}"
                                       RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="-45"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="24,20">
                <Border Background="{StaticResource HoverBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="1. 插件用途"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="为规范结构设计图纸出图，方便设计人员在设计过程中方便快捷的找到对应的常用大样图编制此插件。"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="2. 使用注意事项"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="本插件大样图摘录常用结构设计图纸中的一般大样图，设计人员使用时应结合设计计算、构造要求等对图中钢筋数量、钢筋直径等进行相应调整，不得直接插入使用。"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="3. 地域适应性"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="本插件大样图为常用做法，设计人员应结合不同城市做法、总体要求及业主要求进行核对，确保符合当地做法及总体要求。"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="4. 单位说明"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="本插件中单位以毫米(mm)计，标高以米(m)计，符号代表HPB300钢筋，符号代表HRB400钢筋。"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="5. 责任声明"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="本插件未包括的构造详图及其他未尽事项由设计人员另行设计，且应满足相关规范、标准及图集要求。"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>
            </ScrollViewer>
            
            <!-- 按钮区域 -->
            <Border Grid.Row="2" 
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="0,0,12,12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,0">
                <Grid>
                    <Border HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="{StaticResource PrimaryBrush}"
                            CornerRadius="6"
                            Padding="24,8"
                            Cursor="Hand"
                            MouseLeftButtonDown="ConfirmButton_Click">
                        <TextBlock Text="我知道了"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
