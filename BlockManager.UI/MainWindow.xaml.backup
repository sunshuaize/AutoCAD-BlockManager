<Window x:Class="BlockManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockManager.UI"
        xmlns:converters="clr-namespace:BlockManager.UI.Converters"
        xmlns:vm="clr-namespace:BlockManager.UI.ViewModels"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="块库浏览器 - BlockManager" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 转换器资源 -->
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
        <converters:IconConverter x:Key="IconConverter"/>
        <converters:ModernIconConverter x:Key="ModernIconConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <!-- 现代化 TreeView 样式 -->
        <Style x:Key="ModernTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 项目内容区域 -->
                            <Border x:Name="ItemBorder" 
                                    Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="1"
                                    Padding="{TemplateBinding Padding}"
                                    Margin="1,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 展开/折叠按钮 -->
                                    <ToggleButton x:Name="Expander"
                                                  Grid.Column="0"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Width="16" Height="16"
                                                  Margin="0,0,4,0"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="Transparent" Width="16" Height="16">
                                                                <Path x:Name="ExpandPath"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Stroke="{StaticResource TextSecondaryBrush}"
                                                                      StrokeThickness="1.5"
                                                                      Data="M 4 6 L 8 10 L 12 6"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="ExpandPath" Property="Data" Value="M 6 4 L 10 8 L 6 12"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ExpandPath" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    
                                    <!-- 内容展示器 -->
                                    <ContentPresenter x:Name="PART_Header"
                                                      Grid.Column="1"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- 子项容器 -->
                            <ItemsPresenter x:Name="ItemsHost"
                                            Grid.Row="1"
                                            Margin="12,0,0,0"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- 悬停效果 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            
                            <!-- 选中效果 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SelectedBrush}"/>
                                <Setter TargetName="PART_Header" Property="TextElement.Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            
                            <!-- 焦点效果 -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource PrimaryLightBrush}"/>
                                <Setter TargetName="ItemBorder" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            
                            <!-- 没有子项时隐藏展开按钮 -->
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            
                            <!-- 展开状态控制 -->
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 现代化 TreeView 样式 -->
        <Style x:Key="ModernTreeViewStyle" TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource ModernTreeViewItemStyle}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- CAD 风格工具栏 -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ui:Button Command="{Binding LoadLibraryCommand}" 
                               ToolTip="加载块库"
                               Background="{StaticResource PrimaryBrush}"
                               Foreground="White"
                               BorderBrush="{StaticResource PrimaryBrush}"
                               Icon="{ui:SymbolIcon FolderOpen20}"
                               Padding="10,5"
                               CornerRadius="2">
                        加载块库
                    </ui:Button>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                           Text="块库浏览器 - BlockManager" 
                           FontSize="13" 
                           FontWeight="Normal" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="AutoCAD 块管理工具" 
                               FontSize="11" 
                               Foreground="{StaticResource TextTertiaryBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：文件树 -->
            <Border Grid.Column="0" 
                    Style="{StaticResource ModernCardStyle}"
                    Margin="8,8,4,8" 
                    Padding="0">
                <Grid>
                    <TreeView Name="FileTreeView" 
                              Style="{StaticResource ModernTreeViewStyle}"
                              ItemsSource="{Binding RootNode.Children}"
                              SelectedItemChanged="TreeView_SelectedItemChanged"
                              MouseDoubleClick="TreeView_MouseDoubleClick">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <ContentPresenter Content="{Binding IconType, Converter={StaticResource ModernIconConverter}}"
                                                      Margin="0,0,8,0"
                                                      VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" 
                                               VerticalAlignment="Center"
                                               FontSize="13"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    
                    <!-- CAD 风格加载指示器 -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            Opacity="0.95"
                            CornerRadius="2"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ui:ProgressRing IsIndeterminate="True" 
                                             Width="32" 
                                             Height="32" 
                                             Margin="0,0,0,12"
                                             Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="正在加载块库..." 
                                       HorizontalAlignment="Center" 
                                       FontSize="13"
                                       FontWeight="Normal"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- 现代化分隔条 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="{StaticResource BorderBrush}"
                          ResizeBehavior="PreviousAndNext"/>
            
            <!-- 右侧：预览区域 -->
            <Border Grid.Column="2" 
                    Style="{StaticResource ModernCardStyle}"
                    Margin="4,8,8,8" 
                    Padding="0">
                <Grid>
                    <!-- 预览图片 -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding CurrentPreview, Converter={StaticResource NullToVisibilityConverter}}"
                                  CanContentScroll="True">
                        <Image Name="PreviewImage" 
                               Stretch="Uniform"
                               Source="{Binding CurrentPreview.PreviewImageBase64, Converter={StaticResource Base64ToImageConverter}}"
                               Margin="10"/>
                    </ScrollViewer>
                    
                    <!-- CAD 风格无预览提示 -->
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding CurrentPreview, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                        <Border Background="{StaticResource CardBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="2"
                                Width="120"
                                Height="80"
                                Margin="0,0,0,16">
                            <ui:SymbolIcon Symbol="DocumentText24" 
                                           FontSize="32" 
                                           Foreground="{StaticResource AccentBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="选择 DWG 文件查看预览" 
                                   HorizontalAlignment="Center" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="双击插入到 AutoCAD 绘图区" 
                                   HorizontalAlignment="Center" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- CAD 风格状态栏 -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                
                <Border Grid.Column="1" 
                        Background="{StaticResource AccentBrush}"
                        CornerRadius="1"
                        Padding="6,2"
                        Margin="0,0,8,0">
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="Black"/>
                </Border>
                
                <TextBlock Grid.Column="2" 
                           Text="Ready" 
                           FontSize="11" 
                           Foreground="{StaticResource AccentBrush}" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
