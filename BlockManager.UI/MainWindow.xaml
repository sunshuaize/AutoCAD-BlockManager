                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                                <Path x:Name="ExpandPath"
                                                                      Width="8" Height="8"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Fill="{StaticResource TextTertiaryBrush}"
                                                                      Data="M 2 1 L 6 4 L 2 7 Z"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="ExpandPath" Property="Data" Value="M 1 2 L 4 6 L 7 2 Z"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    
                                    <!-- å›¾æ ‡ -->
                                    <ContentPresenter Content="{Binding IconType, Converter={StaticResource ModernIconConverter}}"
                                                      Margin="0,0,6,0"
                                                      VerticalAlignment="Center"/>
                                    
                                    <!-- æ–‡æœ¬ -->
                                    <ContentPresenter x:Name="PART_Header"
                                                      ContentSource="Header"
                                                      VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- å­é¡¹å®¹å™¨ -->
                            <ItemsPresenter x:Name="ItemsHost"
                                            Margin="16,0,0,0"/>
                        </StackPanel>
                        
                        <ControlTemplate.Triggers>
                            <!-- æ²¡æœ‰å­é¡¹æ—¶éšè—å±•å¼€æŒ‰é’® -->
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="ExpanderToggle" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            
                            <!-- å±•å¼€çŠ¶æ€æŽ§åˆ¶ -->
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            
                            <!-- é€‰ä¸­æ•ˆæžœ -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SelectedBrush}"/>
                                <Setter TargetName="PART_Header" Property="TextElement.Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            
                            <!-- æ‚¬åœæ•ˆæžœ - ä½¿ç”¨SourceNameé™åˆ¶åªå¯¹å½“å‰Borderç”Ÿæ•ˆ -->
                            <EventTrigger RoutedEvent="Border.MouseEnter" SourceName="ItemBorder">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ItemBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#F3F4F6"
                                                        Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            
                            <EventTrigger RoutedEvent="Border.MouseLeave" SourceName="ItemBorder">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="ItemBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent"
                                                        Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Windsurf é£Žæ ¼ TreeView æ ·å¼ -->
